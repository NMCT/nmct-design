# ~/Gemfile

source "http://rubygems.org"

group :development do
	# CSS Preprocessing
	gem 'sass'
	gem 'compass'
	gem 'autoprefixer-rails'

	# Jekyll
	gem 'jekyll'

	# Guard Specific
	gem 'guard'
	gem 'guard-compass'
	gem 'guard-jekyll-plus'
	gem 'guard-livereload'

	# Faster LiveReload
	gem 'yajl-ruby'
end
