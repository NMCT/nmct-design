	gem 'sass', '~> 3.2'
	gem 'compass', '~> 0.12.6'
	gem 'autoprefixer-rails', '~> 1.1.20140410'

	# Jekyll
	gem 'jekyll', '~> 1.5.1'

	# Guard Specific
	gem 'guard'
	gem 'guard-compass'
	gem 'guard-jekyll-plus'
	gem 'guard-livereload'

	# Faster LiveReload
	gem 'yajl-ruby'
end
